  "phase_1_critical_fixes": {
    "duration": "2025-09-02_to_2025-09-06",
    "tasks": [
      {
        "id": "assign_backup",
        "priority": "P0",
        "commands": [
          "mkdir -p ./project-management/roles",
          "echo '# Backup Developer Role\n\n## Requirements\n- Healthcare data experience\n- Python/SQL proficiency\n- 10 hours/week availability\n\n## Budget: $15,000-20,000\n\nReference: ${references.salary_data}' > ./project-management/roles/backup-developer.md",
          "echo 'DSH,R,A\nBackup,C,R\nYLT,A,I' > ./project-management/roles/raci-matrix.csv"
        ]
      },
      {
        "id": "create_repository",
        "priority": "P0",
        "commands": [
          "gh repo create yuimedi/yuiquery-whitepapers --public --clone",
          "cd yuiquery-whitepapers",
          "gh project create --owner yuimedi --title 'YuiQuery Research Papers'",
          "mkdir -p docs/{paper1,paper2,paper3}/{research,data,figures}",
          "mkdir -p src/{algorithms,analysis,mapping}",
          "mkdir -p project-management/{budget,compliance,risks}"
        ]
      },
      {
        "id": "budget_documentation",
        "priority": "P0",
        "commands": [
          "echo '{\"primary_work\": 22500, \"sme_reviews\": 2700, \"publication_fees\": 3500, \"total\": 28700, \"contingency\": 1300}' > ./project-management/budget/budget-v2.json"
        ]
      }
    ]
  },
  
  "phase_2_compliance": {
    "duration": "2025-09-09_to_2025-09-13",
    "tasks": [
      {
        "id": "irb_filing",
        "commands": [
          "mkdir -p ./compliance/irb",
          "curl -o ./compliance/irb/single-irb-policy.pdf '${references.single_irb}'",
          "echo '# IRB Determination\n\nProject uses de-identified data per HIPAA standards.\nNo human subjects research per 45 CFR 46.\n\nReference: ${references.hipaa_deidentification}' > ./compliance/irb/determination.md"
        ]
      },
      {
        "id": "synthetic_data_setup",
        "commands": [
          "git clone https://github.com/synthetichealth/synthea.git ./data/synthea",
          "cd ./data/synthea && ./run_synthea -p 100",
          "echo '# Data Sources\n\n## Primary: Institutional pre-anonymized\n## Backup: Synthea synthetic data (100 patients generated)' > ./data/README.md"
        ]
      }
    ]
  },
  
  "phase_3_scope_reduction": {
    "duration": "2025-09-16_to_2025-09-20",
    "original_hours_per_paper": 100,
    "reduced_hours_per_paper": 70,
